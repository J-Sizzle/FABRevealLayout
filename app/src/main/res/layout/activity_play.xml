<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ff"
    android:fitsSystemWindows="true"
    tools:context="com.truizlop.fabreveallayoutsample.PlayActivity">

    <com.truizlop.fabreveallayout.FABRevealLayout
        android:id="@+id/fab_reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            app:backgroundTint="@color/white"
            android:tint="#f0f"
            android:src="@android:drawable/ic_dialog_map"/>

        <View
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </View>

        <RelativeLayout
            android:id="@+id/secondary_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ls_card"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#f00"/>

            <TextView
                android:id="@+id/tvCentered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="CENTERED TEXT"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/tvCentered"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Two"/>
        </RelativeLayout>

    </com.truizlop.fabreveallayout.FABRevealLayout>

</RelativeLayout>
